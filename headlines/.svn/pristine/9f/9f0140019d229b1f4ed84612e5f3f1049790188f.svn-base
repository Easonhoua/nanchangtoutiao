<template>
	<view class="share-back-view1" @click="cancelFs()">
		<view class="share-bottom-view1">
			<view class="share-text1" style="margin-top: 30rpx;" @click.stop="wrapperClick()">分享到</view>
			<view class="share-view1" @click.stop="wrapperClick()">
				<view class="share-item1" v-for="(item,index) in shareList" :key="index" @click="shareItemClick(item)">
					<image class="share-item-image1" :src="item.image"></image>
					<text class="share-text-detail1">{{item.title}}</text>
				</view>
			</view>
			<view class="share-cancel-button1">取消分享</view>
		</view>
	</view>
	
</template>

<script>
	import utils from '@/common/js/util.js';
	export default {
		data() {
			return {
				shareList: [],
				webUrl:'',
				webTitle:'',
				webPic:''
			}
		},
		onLoad() {
			this.clickShare();
		},
		onShow(){
			//监听事件
			console.log(11111111);
			uni.$on('showFX', (data) => {  
				console.log("data="+JSON.stringify(data));
			    // if(data.webUrl == 'http://ncrb.wx.0791look.com/app/?p=cloud&action=app&id=16461'){//用户协议
			    // 	this.webUrl = "yhxy";
			    // }else if(data.webUrl == 'http://ncrb.wx.0791look.com/app/?p=cloud&action=app&id=16460'){//用户隐私
			    // 	this.webUrl = "yszc";
			    // }else{
					this.webUrl = data.webUrl;  
				// }
			    this.webTitle = data.webTitle;  
				this.webPic = data.webPic
			}) 
		},
		onHide() {
			// 移除监听事件
			uni.$off('showFX');  
		},
		onUnload() {  
			// 移除监听事件  
			uni.$off('showFX');  
		},
		methods: {
			wrapperClick(){
				console.log("阻止了隐藏事件");
			},
			//获取分享列表
			clickShare(){
				var self = this;
				self.shareList = [];//置空一次
				self.shareList = utils.getShareList();
			},
			//分享-取消分享
			cancelFs(){
				const subNvue = uni.getSubNVueById('fenxiang');
				subNvue.hide()
			},
			shareItemClick(item){
				this.cancelFs();//分享成功后，执行一次，隐藏弹窗
				let detail = {
					title: this.webTitle,
					link : this.webUrl,
					pic : this.webPic
				}
				console.log("detail:"+JSON.stringify(detail));
				if(!detail.link){
					uni.showToast({
						title: '分享url不不能为空',
						icon: 'none',
						duration: 1500
					});
					return false;
				}
				//判断点击的是复制链接还是其它
				if(item.provider === 'copyLink'){
					//console.log("点击了复制链接");
					uni.setClipboardData({
						data:detail.link,
						success() {
							console.log("复制成功")
						}
					})
				}else if(item.provider === 'refresh'){
					this.webUrl = encodeURIComponent(this.webUrl);
					uni.redirectTo({
						url:'/pages/webView/webView?webUrl='+this.webUrl+'&webTitle='+this.webTitle+'&webPic='+this.webPic,
						success: () => {
							console.log("刷新成功");
						}
					})
				}else{
					//console.log("点击了其它");
					utils.clickShareItem(item,detail);//调用分享接口
				}
				//this.addShareNum();
			},
			//分享次数加1
			// addShareNum(){
			// 	const url = 'api/ncrb/';
			// 	var sendData = {
			// 		id:this.id,
			// 		mod:'share',
			// 		action:'view'
			// 	}
			// 	this.request.get(url, sendData).then(res => {
			// 		//console.log("res.code: " + JSON.stringify(res.code));
			// 	});
			// }
		}
	}
</script>

