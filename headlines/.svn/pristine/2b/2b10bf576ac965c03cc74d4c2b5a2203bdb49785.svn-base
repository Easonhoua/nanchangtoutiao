<template>
	<view class="page-news">
		<uni-list class="listview" :enableBackToTop="true" :scroll-y="true" @scrolltolower="loadMore()">
		    <uni-refresh class="refresh" @refresh="onrefresh" @pullingdown="onpullingdown" :display="refreshing ? 'show' : 'hide'">
		        <div class="refresh-view">
		            <image class="refresh-icon" :src="refreshIcon" :style="{width: (refreshing || pulling) ? 0: '32px'}"
		                :class="{'refresh-icon-active': refreshFlag}"></image>
		            <uni-load-more v-if="refreshing" class="loading-icon" status="loading" :contentText="loadingMoreText"></uni-load-more>
		            <text class="loading-text">{{refreshText}}</text>
		        </div>
		    </uni-refresh>
			
		    <uni-cell v-for="(item, index) in dataList" :key="item.id">
				<news-video-item v-if="item.style == 'video'" :newsItem="item" @click="goDetail(item)" v-on:videoPlay="videoPlay" ></news-video-item>
				<news-pics-item v-if="item.style == 'pics'" :newsItem="item"  @click="goDetail(item)"></news-pics-item>
				<news-bigpic-item v-else-if="item.style == 'activity' || item.style == 'video'" :newsItem="item"  @click="goDetail(item)"></news-bigpic-item>
				<news-item v-else :newsItem="item"  @click="goDetail(item)"></news-item>
		    </uni-cell>
		    <uni-cell v-if="(isLoading || dataList.length > 4)&&!isNoData">
		        <view class="loading-more">
		            <text class="loading-more-text">{{loadingText}}</text>
		        </view>
		    </uni-cell>
		</uni-list>
	</view>
</template>

<script>
	import utils from '@/common/js/util.js';
	import api from '@/api/index.js';
	import uniList from '@/components/uni-list.vue';
	import uniCell from '@/components/uni-cell.vue';
	import uniRefresh from '@/components/uni-refresh.vue';
	import uniLoadMore from '@/components/uni-load-more.vue';
	import newsItem from '@/components/item-list/news-item.nvue';
	import newsPicsItem from '@/components/item-list/news-pics-item.nvue';
	import newsBigpicItem from '@/components/item-list/news-bigpic-item.nvue';
	import newsVideoItem from '@/components/item-list/news-video-item.nvue';
	export default {
		components: {
			uniList,
			uniCell,
			uniRefresh,
			uniLoadMore,
			newsItem,
			newsPicsItem,
			newsBigpicItem,
			newsVideoItem
		},
		data() {
			return {
				dataList: [],
				keyword:'',
				navigateFlag: false,
				pulling: false,
				refreshing: false,
				refreshFlag: false,
				refreshText: "",
				isLoading: false,
				loadingText: '加载中...',
				isNoData: false,
				pageNo: 0,
				loadnum: 0,
				tpp: 30,
				angle: 0,
				currDate:'',
				weekday:'',
				requestParams: {
					type:20
				},
				loadingMoreText: {
					contentdown: '',
					contentrefresh: '',
					contentnomore: ''
				},
				hasNotchInScreen:false,//是否是刘海屏
				refreshIcon: "data:image/png;base64,",
				videoContextList: {},
				videoContext: ''
			}
		},
		created() {
			this.pullTimer = null;
			let _this = this;
		},
		onReady() {
			// #ifdef APP-PLUS
			this.hasNotchInScreen = plus.navigator.hasNotchInScreen();
			// this.statusBarHeight = plus.navigator.hasNotchInScreen() ? '66upx':'40upx';
			// #endif
			// this.loadData(true);
		},
		onLoad(e) {
			console.log(e);
			if (e.typeId) {
				if(e.typeId == 10){
					uni.setNavigationBarTitle({
						title:"问政列表"
					})
				}else if(e.typeId == 20){
					uni.setNavigationBarTitle({
						title:"政经周刊"
					})
				}else{
					uni.setNavigationBarTitle({
						title:"新闻列表"
					})
				}
				this.requestParams.type = e.typeId;
				this.loadData(true);
			}
		},
		onHide(){
			if(this.videoContext){
				this.videoContext.pause();
			}
		},
		methods: {
			loadData(refresh) {
				let _this = this;
				if (this.isLoading) {
					return;
				}
				if(refresh){
					_this.dataList = [];
					_this.pageNo = 0;
					_this.loadnum =0;
					_this.requestParams.loadnum = 0;
					this.isNoData = false;
				}
				this.isLoading = true;
				this.requestParams.keyword = this.keyword;
				
				var url = 'api/ncrb/';
				api.get(url,_this.requestParams).then(result =>{
					if(result.code === 200){
						const data = result.data;
						_this.isNoData = (data.length <= 0);
						var data_list=[];
						if (!_this.isNoData) {
							data_list = data.map((news) => {
								if(news.style == 'video'){
									var video = uni.createVideoContext(news.id);
									_this.videoContextList[news.id] = video;
								}
								news.id = news.id;
								news.datetime = utils.friendlyDate(news.dateline+"000");
								news.time = utils.formatMinutesTime(news.dateline+"000");
								return news;
							});
						
							if (refresh) {
								_this.dataList = data_list;
							} else {
								_this.dataList = _this.dataList.concat(data_list);
								
							}
							_this.pageNo += 1;
							_this.loadnum = _this.pageNo * _this.tpp;
							_this.requestParams.loadnum = _this.loadnum;
							console.log(_this.pageNo,_this.loadnum,_this.requestParams.loadnum)
						}
					}else{
						if (_this.dataList.length == 0) {
							_this.isNoData = true;
						}
					}
					_this.isLoading = false;
					if (refresh) {
						_this.refreshing = false;
						_this.refreshFlag = false;
						_this.refreshText = "已刷新";
						_this.pulling = false;
						if (_this.pullTimer) {
							clearTimeout(_this.pullTimer);
						}
						_this.pullTimer = setTimeout(() => {
							_this.pulling = false;
						}, 1000);
					}
				}).catch(response => {
					_this.isLoading = false;
					console.log(response);
					if (_this.dataList.length == 0) {
						_this.isNoData = true;
					}
				});
			},
			loadMore(e) {
				if (!this.isNoData) {
					this.loadData();
				}
			},
			clear() {
				this.dataList = [];
				this.loadnum = 0;
				this.pageNo = 0;
			},
			goDetail(detail) {
				if (this.navigateFlag) {
					return;
				}
				this.navigateFlag = true;
				
				utils.gotoDetail(detail);
				setTimeout(() => {
					this.navigateFlag = false;
				}, 200)
			},
			refreshData() {
				if (this.isLoading) {
					return;
				}
				this.pulling = true;
				this.refreshing = true;
				this.refreshText = "正在刷新...";
				this.loadData(true);
			},
			onrefresh(e) {
				this.refreshData();
			},
			search() {
				this.loadData(true);
			},
			toSearch() {
				uni.redirectTo({
					url: '/pages/search/search'
				});
			},
			clearkeyWord() {
				this.keyword = '';
			},
			goback() {
				uni.navigateBack({});
			},
			onpullingdown(e) {
				if (this.refreshing) {
					return;
				}
				this.pulling = false;
				if (Math.abs(e.pullingDistance) > Math.abs(e.viewHeight)) {
					this.refreshFlag = true;
					this.refreshText = "释放立即刷新";
				} else {
					this.refreshFlag = false;
					this.refreshText = "下拉可以刷新";
				}
			},
			videoPlay(item) {
				if (this.videoContext && item.id != this.videoContext.id ) {
					this.videoContext.pause();
				}
				var video = this.videoContextList[item.id];
				this.remarkVideo(video);
			},
			remarkVideo(video) {
				this.videoContext = video;
			}
		},
		onNavigationBarButtonTap(e){
			console.log("e: " + JSON.stringify(e));
			uni.navigateTo({
				url:'/pages/search/search'
			})
		}
	}
</script>

