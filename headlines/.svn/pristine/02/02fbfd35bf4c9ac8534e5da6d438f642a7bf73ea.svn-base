<template>
	<view class="page-news">
		<uni-list ref="newsList" class="listview" :enableBackToTop="true" :scroll-y="true" @scrolltolower="loadMore()">
            <uni-refresh class="refresh" @refresh="onrefresh" @pullingdown="onpullingdown" :display="refreshing ? 'show' : 'hide'">
                <div class="refresh-view">
                    <image class="refresh-icon" :src="refreshIcon" :style="{width: (refreshing || pulling) ? 0: '32px'}"
                        :class="{'refresh-icon-active': refreshFlag}"></image>
                    <uni-load-more v-if="refreshing" class="loading-icon" status="loading" :contentText="loadingMoreText"></uni-load-more>
                    <text class="loading-text">{{refreshText}}</text>
                </div>
            </uni-refresh>
			
            <uni-cell v-for="(item, index) in dataList" :key="item.id">
				<news-affairs-item v-if="item.style == 'lianbo'" :newsItem="item"  @click="goDetail(item)"></news-affairs-item>
				<news-slidel-item v-else-if="item.style == 'slide'" :newsItem="item" @click="goDetail(item)"></news-slidel-item>
				<news-video-item v-else-if="item.style == 'video'" :newsItem="item" @click="goDetail(item)" v-on:videoPlay="videoPlay" ></news-video-item>
				<news-pics-item v-else-if="item.style == 'pics'" :newsItem="item"  @click="goDetail(item)"></news-pics-item>
				<news-bigpic-item v-else-if="item.style == 'bigpic' || item.style=='h5_bigpic'" :newsItem="item" @click="goDetail(item)"></news-bigpic-item>
				<news-item v-else  :newsItem="item"  @click="goDetail(item)"></news-item>
            </uni-cell>
            <uni-cell v-if="(isLoading || dataList.length > 0)&&!isNoData">
                <view class="loading-more">
                    <text class="loading-more-text">{{loadingText}}</text>
                </view>
            </uni-cell>
        </uni-list>
	</view>
</template>

<script>
	import utils from '@/common/js/util.js';
	import api from '@/api/index.js';
	import uniList from '@/components/uni-list.vue';
	import uniCell from '@/components/uni-cell.vue';
	import uniRefresh from '@/components/uni-refresh.vue';
	import uniLoadMore from '@/components/uni-load-more.vue';
	import noData from '@/components/nodata.nvue';
	import newsItem from '@/components/item-list/news-item.nvue';
	import newsSlidelItem from '@/components/item-list/news-slide-item.vue';
	import newsAffairsItem from '@/components/item-list/news-affairs-item.vue';
	import newsVideoItem from '@/components/item-list/news-video-item.nvue';
	import newsPicsItem from '@/components/item-list/news-pics-item.nvue';
	import newsBigpicItem from '@/components/item-list/news-bigpic-item.nvue';
	export default {
		components: {
			uniList,
			uniCell,
			uniRefresh,
			uniLoadMore,
			noData,
			newsItem,
			newsSlidelItem,
			newsAffairsItem,
			newsVideoItem,
			newsPicsItem,
			newsBigpicItem
		},
		props: {
			nid: {
				type: [Number, String],
				default: ''
			}
		},
		data() {
			return {
				dataList: [],
				subList:[],
				subIndex:0,
				tag:'',
				navigateFlag: false,
				pulling: false,
				refreshing: false,
				refreshFlag: false,
				refreshText: "",
				isLoading: false,
				loadingText: '加载中...',
				isNoData: false,
				pageNo: 0,
				loadnum: 0,
				tpp: 10,
				angle: 0,
				currDate:'',
				weekday:'',
				loadingMoreText: {
					contentdown: '',
					contentrefresh: '',
					contentnomore: ''
				},
				refreshIcon: "data:image/png;base64,",
				videoContextList: {},
				videoContext: ''
				
			}
		},
		created() {
			console.log("进入头条");
			this.pullTimer = null;
			let _this = this;
			this.requestParams = {
				type: _this.nid,
				loadnum: _this.loadnum,
				tpp: _this.tpp
			};
		},
		// news-page是组件，不是页面，所以onHide之类的页面生命周期是不走的
		onHide(){
			if(this.videoContext){
				this.videoContext.pause();
			}
		},
		methods: {
			resetLoadMore() {
				this.$refs["newsList"].resetLoadmore();
			},
			loadData(refresh) {
				let _this = this;
				if (this.isLoading) {
					return;
				}
				if(refresh){
					_this.dataList = [];
					_this.pageNo = 0;
					_this.loadnum =0;
					_this.requestParams.loadnum = 0;
					this.isNoData = false;
				}
				this.isLoading = true;
				this.requestParams.tag = this.tag;
				this.requestParams.time = new Date().getTime() + '';
				var startTime = new Date();
				
				var url = 'api/ncrb/';
				api.get(url,_this.requestParams).then(result =>{
					if(result.code === 200){
						const data = result.data;
						_this.isNoData = (data.length <= 0);
						var data_list=[];
						if (!_this.isNoData) {
							data_list = data.map((news,index) => {
								if(news.style == 'video'){
									var video = uni.createVideoContext(news.id);
									_this.videoContextList[news.id] = video;
								}
								
								if(news.style=='lianbo'){
									news.lblist.time =  utils.formatMinutesTime(news.lblist.dateline+"000");
								}
								news.datetime = utils.friendlyDate(news.dateline+"000");
								news.time = utils.formatMinutesTime(news.dateline+"000");
								return news;
							});
						
							if (refresh) {
								_this.dataList = data_list;
							} else {
								_this.dataList = _this.dataList.concat(data_list);
								_this.dataList = utils.unique(_this.dataList,"id");
								
							}
							_this.pageNo += 1;
							_this.loadnum = _this.pageNo * _this.tpp;
							_this.requestParams.loadnum = _this.loadnum;
							console.log(_this.pageNo,_this.loadnum,_this.requestParams.loadnum)
						}
					}else{
						if (_this.dataList.length == 0) {
							_this.isNoData = true;
						}
					}
					_this.isLoading = false;
					if (refresh) {
						_this.refreshing = false;
						_this.refreshFlag = false;
						_this.refreshText = "已刷新";
						_this.pulling = false;
						if (_this.pullTimer) {
							clearTimeout(_this.pullTimer);
						}
						_this.pullTimer = setTimeout(() => {
							_this.pulling = false;
						}, 1000);
					}
				}).catch(response => {
					_this.isLoading = false;
					console.log(response);
					if (_this.dataList.length == 0) {
						_this.isNoData = true;
					}
				});
			},
			loadMore(e) {
				if (!this.isNoData) {
					this.loadData();
				}
			},
			clear() {
				this.dataList = [];
				this.loadnum = 0;
				this.pageNo = 0;
			},
			goDetail(detail) {
				if(this.videoContext){
					this.videoContext.pause();
				}
				if (this.navigateFlag) {
					return;
				}
				this.navigateFlag = true;
				
				utils.gotoDetail(detail);
				setTimeout(() => {
					this.navigateFlag = false;
				}, 200)
			},
			openDetail(detail){
				if(detail.openFlag){
					detail.openFlag = !detail.openFlag;
				}else{
					detail.openFlag  = true;
				}
				console.log("this.newsItem.openFlag=" + detail.openFlag);
			},
			refreshData() {
				if (this.isLoading) {
					return;
				}
				this.pulling = true;
				this.refreshing = true;
				this.refreshText = "正在刷新...";
				this.loadData(true);
			},
			onrefresh(e) {
				this.refreshData();
			},
			onpullingdown(e) {
				if (this.refreshing) {
					return;
				}

				this.pulling = false;
				if (Math.abs(e.pullingDistance) > Math.abs(e.viewHeight)) {
					this.refreshFlag = true;
					this.refreshText = "释放立即刷新";
				} else {
					this.refreshFlag = false;
					this.refreshText = "下拉可以刷新";
				}
			},
			newGuid() {
				let s4 = function() {
					return (65536 * (1 + Math.random()) | 0).toString(16).substring(1);
				}
				return (s4() + s4() + "-" + s4() + "-4" + s4().substr(0, 3) + "-" + s4() + "-" + s4() + s4() + s4()).toUpperCase();
			},
			videoPlay(item) {
				if (this.videoContext && item.id != this.videoContext.id ) {
					this.videoContext.pause();
				}
				var video = this.videoContextList[item.id];
				this.remarkVideo(video);
			},
			remarkVideo(video) {
				this.videoContext = video;
			}
		}
	}
</script>

